rules_version = '2';

// Firebase Storage Security Rules for LessMo
// LÍMITES ESTRICTOS PARA NO EXCEDER CUOTA GRATUITA
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - usuarios autenticados pueden subir UNA SOLA foto de perfil
    // Formato: profiles/userId_cualquiernombre.jpg
    match /profiles/{fileName} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir escritura solo si:
      // 1. Está autenticado
      // 2. Imagen menor a 1MB (antes 500KB, aumentado para evitar rechazos)
      // 3. Solo imágenes JPG/PNG/JPEG
      allow create, update: if request.auth != null 
                   && request.resource.size < 1 * 1024 * 1024 // Máximo 1MB
                   && request.resource.contentType.matches('image/(jpeg|jpg|png)');
      
      // Permitir eliminar solo si está autenticado
      allow delete: if request.auth != null;
    }
    
    // Denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
