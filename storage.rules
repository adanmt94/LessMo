rules_version = '2';

// Firebase Storage Security Rules for LessMo
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - usuarios autenticados pueden subir su propia foto
    match /profiles/{fileName} {
      // Permitir lectura a todos
      allow read;
      
      // Permitir escritura solo si está autenticado
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
