rules_version = '2';

// Firebase Storage Security Rules for LessMo
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - usuarios autenticados pueden subir su propia foto
    match /profiles/{userId}_{timestamp}.jpg {
      // Permitir lectura a todos
      allow read;
      
      // Permitir escritura solo al due침o del perfil
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // M치ximo 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Fallback: permitir cualquier upload de perfiles si est치 autenticado
    match /profiles/{allPaths=**} {
      allow read;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Denegar todo lo dem치s por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
