rules_version = '2';

// Firebase Storage Security Rules for LessMo
// LÍMITES ESTRICTOS PARA NO EXCEDER CUOTA GRATUITA
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - TEMPORALMENTE PERMISIVO PARA DEBUGGING
    // Formato: profiles/userId_cualquiernombre.jpg
    match /profiles/{fileName} {
      // Permitir TODO temporalmente
      allow read, write: if true;
    }
    
    // Denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
