rules_version = '2';

// Firebase Storage Security Rules for LessMo
// LÍMITES ESTRICTOS PARA NO EXCEDER CUOTA GRATUITA
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - usuarios autenticados pueden subir fotos de perfil
    // Formato: profiles/userId_cualquiernombre.jpg
    match /profiles/{fileName} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir escritura solo si está autenticado
      // Aumentado límite a 2MB para evitar rechazos
      allow create, update: if request.auth != null 
                   && request.resource.size < 2 * 1024 * 1024; // Máximo 2MB
      
      // Permitir eliminar solo si está autenticado
      allow delete: if request.auth != null;
    }
    
    // Denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
